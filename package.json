{
  "name": "mdpub",
  "version": "0.1.2",
  "description": "Tool for authoring documents in markdown with live preview and publishing to pdf or html/css.",
  "homepage": "https://github.com/andrew-chang-dewitt/mdpub#readme",
  "author": "Andrew Chang-DeWitt",
  "license": "MIT",
  "keywords": [
    "markdown",
    "md",
    "pdf",
    "html",
    "cli",
    "hmr",
    "preview"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew-chang-dewitt/mdpub"
  },
  "bugs": {
    "url": "https://github.com/andrew-chang-dewitt/mdpub/issues"
  },
  "type": "module",
  "bin": "./index.js",
  "files": [
    "./index.js",
    "dist"
  ],
  "bundleDependencies": [
    "create-vite-ssg"
  ],
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "test": "echo 'TESTS NOT IMPLEMENTED YET'",
    "prebuild": "npm run test",
    "build": "tsc",
    "predev": "npm run build",
    "dev": "node index.js -v example",
    "watch": "tsc-watch --onSuccess 'node index.js -v example'",
    "prerelease": "npm run clean && npm run build",
    "release": "scripts/release",
    "prepare": "husky",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "prettier": {
    "semi": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "create-vite-ssg": "^0.0.3",
    "loglevel": "^1.9.2",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.9.1",
    "commit-and-tag-version": "^12.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.6.3"
  }
}
